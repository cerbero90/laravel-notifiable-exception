{
    "name": "cerbero/notifiable-exception",
    "type": "library",
    "description": "Laravel package to send notifications when some exceptions are thrown.",
    "keywords": [
        "laravel",
        "notifications",
        "exceptions"
    ],
    "homepage": "https://github.com/cerbero90/notifiable-exception",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrea Marco Sartori",
            "email": "andrea.marco.sartori@gmail.com",
            "homepage": "https://github.com/cerbero90",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "illuminate/support": "^5.5|^6.0|^7.0",
        "illuminate/contracts": "^5.5|^6.0|^7.0",
        "illuminate/notifications": "^5.5|^6.0|^7.0",
        "illuminate/bus": "^5.5|^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4|^6.0|^7.0|^8.0",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^3.5|^4.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Cerbero\\NotifiableException\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cerbero\\NotifiableException\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Cerbero\\NotifiableException\\Providers\\NotifiableExceptionServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}